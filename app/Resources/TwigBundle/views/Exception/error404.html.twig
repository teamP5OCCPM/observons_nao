{% extends '::base.html.twig' %}

{% block title %}
    Erreur 404 - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt70">
        <div class="flex-wrap justify-content-center">
            <div class="card col-12">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div>
                                <img src="{{ asset('img/bird404.jpg') }}" alt="image erreur" />
                            </div>
                            <h2 class="card-title"></h2>
                            <p class="mb-0"></p>

                        </div>
                        <div class="col-md-6">
                            <h1 class="card-title">Oups ! Une erreur est survenue !</h1>
                            Le serveur a retourne une erreur "{{ status_code }} {{ status_text }}".

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}