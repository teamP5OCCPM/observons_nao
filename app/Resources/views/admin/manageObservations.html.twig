{% extends 'base-admin.html.twig' %}

{% block title %}
    Gestion des observations - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt70">
        <h2>Gestion des observations</h2>
        <div id="accordion" role="tablist">
            {% for observation in observations %}
            <div class="card card-accordion">
                <div class="card-header
                    {% if observation.status == "refused" %}bg-danger
                    {% elseif observation.status == "waiting" %}bg-secondary
                    {% else %}bg-nao-green
                    {% endif %}"
                    role="tab" id="heading{{ loop.index }}">
                    <h5 class="mb-0">
                        <a class="collapsed text-white" data-toggle="collapse" href="#collapse{{ loop.index }}" aria-expanded="true" aria-controls="collapse{{ loop.index }}">
                            {{ observation.title }}
                        </a>
                    </h5>
                </div>
                <div id="collapse{{ loop.index }}" class="collapse" role="tabpanel" aria-labelledby="heading{{ loop.index }}" data-parent="#accordion">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-4 col-md-6">
                                <img src="{{ asset(observation.image) }}" alt="">
                            </div>
                            <div class="col-lg-8 col-md-6">
                                <h4>{{ observation.bird.species }}</h4>
                                {{ observation.description }}
                            </div>
                        </div>
                        {% if observation.status != "refused" %}
                        <hr>
                        {% endif %}
                        <div class="row d-flex justify-content-around">
                            {% if observation.status == "validate" %}
                                <a class="btn btn-primary btn-sm mt-3" href="{{ path('showObservation', {'slug': observation.slug}) }}">Acc√®der</a>
                            {% endif %}
                            {% if observation.status == "waiting" %}
                                <button class="btn btn-success btn-sm mt-3">Valider</button>
                                <button class="btn btn-warning btn-sm text-white mt-3">Editer</button>
                                <button class="btn btn-danger btn-sm mt-3">Refuser</button>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    {{ observation.user.lastname }} <span class="float-right">{{ observation.createdAt | date('d/m/Y') }}</span>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}