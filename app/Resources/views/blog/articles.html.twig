{% extends 'base.html.twig' %}

{% block title %}
    Blog - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt70">
        <h1>Les articles</h1>
        <div class="row mt-4">
            {% for article in articles %}
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card hoverable">
                        <div class="img-card-box">
                            <img class="card-img-top" src="{{ asset(article.image) }}" alt="Card image cap">
                        </div>
                        <div class="card-body">
                            <div class="badge badge-primary">Nouveau</div>
                            <a href="#" class="btn-rounded bg-nao-green float-right" data-toggle="tooltip" data-placement="left" title="Lire la suite">+</a>
                            <a href="#">
                                <h4 class="card-title">{{ article.title }}</h4>
                            </a>
                            <p class="card-text">{{ article.content | truncate(160, true, '...') }}</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">{{ article.user.lastName }}</small>
                            <small class="text-muted float-right">{{ article.createdAt | date("d F Y") }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                {% if page != 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('observations', {'page': page - 1}) }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                {% endif %}
                {% for p in range(1, nbPages) %}
                    <li{% if p == page %} class="page-item active light-blue lighten-2"{% endif %}>
                        <a class="page-link" href="{{ path('observations', {'page': p}) }}">{{ p }}</a>
                    </li>
                {% endfor %}
                {% if page != nbPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('observations', {'page': page + 1}) }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
{% endblock %}